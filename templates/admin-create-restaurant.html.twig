{% extends "admin-base.html.twig" %}
{% block content %}
    {% if errorText != null %}
        <div class="alert alert-danger" role="alert">
            {{ errorText }}
        </div>
    {% endif %}
    <div class="white-main-container" style="padding: 20px 20px">
    <form action="../admin/create_restaurant.php" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="inputName">Название</label>
            <input type="text" class="form-control" id="inputName" name="name" placeholder="Введите название" required>
        </div>
        <div class="form-group">
            <label for="inputAddress">Адрес ресторана</label>
            <input type="text" class="form-control" id="inputAddress" name="address" placeholder="Введите адрес" required>
            <small id="addressHelp" class="form-text text-muted">Адрес ресторана, из которого будет осуществляться доставка</small>
        </div>
        <div class="form-group">
            <label for="inputCuisine">Кухни</label>
            <input type="text" class="form-control" id="inputCuisine" name="cuisine" placeholder="Введите название" required>
        </div>
        <div class="form-group">
            <label for="inputNumber">Основной номер телефона</label>
            <input type="number" class="form-control" id="inputNumber" name="number" placeholder="Введите основной номер телефона" required>
        </div>
        <div class="form-group">
            <label for="inputEmail">Основная почта</label>
            <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Введите основную почту" required>
        </div>
        <div class="mb-3">
            <label for="formFile" class="form-label">Загрузите иконку ресторана</label>
            <input class="form-control" type="file" name="image" id="formFile" required>
        </div>
        <button type="submit" class="btn btn-primary">Подтвердить</button>
    </form>
    </div>
{% endblock %}